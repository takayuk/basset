set autoindent
set backupdir=$HOME/.vim
set browsedir=buffer
set nocompatible
set incsearch
set number
set shiftwidth=2
set showmatch
set smartindent
set smarttab
set tabstop=2
set whichwrap=b,s,h,l,<,>,[,]
set nowrapscan
set directory=$HOME/.vim

imap <C-j> <esc>

set expandtab

syntax on
filetype on
filetype indent on
filetype plugin on

